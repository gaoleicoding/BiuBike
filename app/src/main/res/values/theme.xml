<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!--ActionBar背景色-->
        <item name="colorPrimary">@color/color_343333</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/color_343333</item>
        <!--控制各个控件被选中时的颜色-->
        <item name="colorAccent">@color/color_343333</item>
        <!--页面背景色-->
        <item name="android:windowBackground">@color/white</item>
        <!--各个控制控件的默认颜色-->
        <item name="android:colorControlNormal">@color/color_343333</item>
        <!--底部导航栏颜色-->
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="AppThemeDefault" parent="AppTheme.Base" />

    <!-- 状态栏黑底白字 -->
    <style name="AppThemeDark" parent="AppTheme.Base">
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <!-- 状态栏黑底白字，布局上移 -->
    <style name="TranslucentStatus" parent="AppTheme.Base">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="TranslucentLightStatus" parent="TranslucentStatus" />
    <!-- 无状态栏 -->
    <style name="FullScreen" parent="AppThemeDefault">
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>